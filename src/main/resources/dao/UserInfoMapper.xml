<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liu.getOffBusReminder.dao.UserInfoDao">
    <resultMap type="com.liu.getOffBusReminder.dao.entity.UserInfoDO" id="UserInfoMap">
        <result property="user_id" column="userId" jdbcType="VARCHAR"/>
        <result property="work_des_cn" column="workdesCn" jdbcType="VARCHAR"/>
        <result property="home_des_cn" column="homeDesCn" jdbcType="VARCHAR"/>
        <result property="work_des" column="workDes" jdbcType="VARCHAR"/>
        <result property="home_des" column="homeDes" jdbcType="VARCHAR"/>
        <result property="add_time" column="addTime" jdbcType="TIMESTAMP"/>
        <result property="update_time" column="updateTime" jdbcType="TIMESTAMP"/>
        <result property="yn" column="yn" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserInfoMap">
        select
            user_id, work_des_cn, home_des_cn,work_des,home_des,add_time,update_time,yn
        from t_user_info
        where user_id = #{userId}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserInfoMap">
        select
        user_id, work_des_cn, home_des_cn,work_des,home_des,add_time,update_time,yn
        from t_user_info
        <where>
            <if test="userId != null">
                and userId = #{user_id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="age != null">
                and age = #{age}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" >
        insert into t_user_info(user_id, work_des_cn, home_des_cn,work_des,home_des,add_time,update_time,yn)
        values (#{userId}, #{workDesCn},#{homeDesCn}, #{workDes},#{homeDes}, #{addTime},#{updateTime}, #{yn})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_user_info
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_user_info where user_id = #{userId}
    </delete>

</mapper>

